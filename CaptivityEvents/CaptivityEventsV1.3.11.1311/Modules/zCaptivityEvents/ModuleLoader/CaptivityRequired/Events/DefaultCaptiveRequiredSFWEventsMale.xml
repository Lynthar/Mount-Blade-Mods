    <!-- REQUIRED EVENTS CALLED FROM CODE -->
    <!-- Male -->
    <!-- Defeated Events -->
    <CEEvent>
        <Name>CE_defeated_and_taken_prisoner_male</Name>
        <Text>{=DefaultCaptiveRequiredSFWEventsMale1}You fight valiantly, but as the battle concludes you find yourself surrounded. You do your best to hold your enemies at bay, but as they close in one of them knocks your weapon to the ground, and another grabs your arms, shackling them behind you.</Text>
        <Backgrounds>
            <Background Name="encounter_lose_sea" Weight="1" UseConditions="CE_background_sea" />
            <Background Name="encounter_lose" Weight="1" />
        </Backgrounds>
        <MultipleRestrictedListOfFlags>
            <RestrictedListOfFlags>Captive</RestrictedListOfFlags>
            <RestrictedListOfFlags>Overwritable</RestrictedListOfFlags>
            <RestrictedListOfFlags>CanOnlyBeTriggeredByOtherEvent</RestrictedListOfFlags>
        </MultipleRestrictedListOfFlags>
        <Options>
            <Option>
                <Order>0</Order>
                <MultipleRestrictedListOfConsequences>
                    <RestrictedListOfConsequences>Continue</RestrictedListOfConsequences>
                </MultipleRestrictedListOfConsequences>
                <OptionText>{=DefaultCaptiveRequiredSFWEventsMale2}Continue...</OptionText>
                <TriggerEvents>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_sea_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_settlement_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_village_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                </TriggerEvents>
            </Option>
        </Options>


        <ReqHeroMinAge>18</ReqHeroMinAge>
    </CEEvent>

    <CEEvent>
        <Name>CE_taken_prisoner_male</Name>
        <Text>{=DefaultCaptiveRequiredSFWEventsMale3}Your enemies take your weapons and armor as you surrender. Their leader briefly inspects your restraints, nodding approvingly as you are rounded up with the rest of the captives.</Text>
