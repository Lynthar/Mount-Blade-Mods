  <CEEvent>
    <Name>CE_naval_male_101</Name>
    <Text>{=DefaultCaptiveEventsNavalMale1}You're lashed belowdecks and given rudimentary tasks while the sailors jeer. The salt stings in your wounds as the ship cuts through grey water.</Text>
    <BackgroundName></BackgroundName>
    <MultipleRestrictedListOfFlags>
        <RestrictedListOfFlags>Captive</RestrictedListOfFlags>
        <RestrictedListOfFlags>Overwritable</RestrictedListOfFlags>
        <RestrictedListOfFlags>Common</RestrictedListOfFlags>
        <RestrictedListOfFlags>LocationSea</RestrictedListOfFlags>
        <RestrictedListOfFlags>HeroGenderIsMale</RestrictedListOfFlags>
    </MultipleRestrictedListOfFlags>
    <Options>
      <Option>
        <Order>0</Order>
        <MultipleRestrictedListOfConsequences>
          <RestrictedListOfConsequences>ChangeRelation</RestrictedListOfConsequences>
          <RestrictedListOfConsequences>EmptyIcon</RestrictedListOfConsequences>
        </MultipleRestrictedListOfConsequences>
        <OptionText>{=DefaultCaptiveEventsNavalMale2}Do the work and avoid trouble.</OptionText>
        <RelationTotal>1</RelationTotal>
      </Option>
      <Option>
        <Order>1</Order>
        <MultipleRestrictedListOfConsequences>
          <RestrictedListOfConsequences>ChangeHealth</RestrictedListOfConsequences>
          <RestrictedListOfConsequences>EmptyIcon</RestrictedListOfConsequences>
        </MultipleRestrictedListOfConsequences>
        <OptionText>{=DefaultCaptiveEventsNavalMale3}Pick a fight with the nearest sailor.</OptionText>
        <HealthTotal>-10</HealthTotal>
      </Option>
    </Options>
    
    <WeightedChanceOfOccurring>20</WeightedChanceOfOccurring>
    <ReqHeroMinAge>18</ReqHeroMinAge>
  </CEEvent>

