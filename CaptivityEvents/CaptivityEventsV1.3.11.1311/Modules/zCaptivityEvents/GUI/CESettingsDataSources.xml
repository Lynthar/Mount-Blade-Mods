<?xml version="1.0" encoding="UTF-8"?>
<!-- CESettingsDataSources.xml: DataSource definitions for CESettings.xml bindings -->
<CESettingsDataSources>
  <!-- General Options: Core on/off toggles for event systems -->
  <DataSource Id="GeneralOptions">
    <OptionGroup GroupId="EventSystem">
      <Option OptionId="EventCaptiveOn" DisplayName="Captive Events Enabled" Description="Enable or disable all captive-related events." SettingField="EventCaptiveOn" Type="Boolean" />
      <Option OptionId="EventCaptorOn" DisplayName="Captor Events Enabled" Description="Enable or disable all captor-related events." SettingField="EventCaptorOn" Type="Boolean" />
      <Option OptionId="EventRandomEnabled" DisplayName="Random Events Enabled" Description="Enable or disable random events system." SettingField="EventRandomEnabled" Type="Boolean" />
      <Option OptionId="CommonControl" DisplayName="Common Events" Description="Toggle common/non-sexual events." SettingField="CommonControl" Type="Boolean" />
      <Option OptionId="NonSexualContent" DisplayName="Non-Sexual Content" Description="Include non-sexual event variants." SettingField="NonSexualContent" Type="Boolean" />
      <Option OptionId="SexualContent" DisplayName="Sexual Content" Description="Include sexual event variants." SettingField="SexualContent" Type="Boolean" />
    </OptionGroup>
  </DataSource>

  <!-- Capture Options: Event occurrence rates and capture mechanics -->
  <DataSource Id="CaptureOptions">
    <OptionGroup GroupId="CaptureSettings">
      <Option OptionId="EventOccurrenceOther" DisplayName="Event Occurrence (Other)" Description="Weighted chance (0-100) for captive events in non-settlement locations." SettingField="EventOccurrenceOther" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="EventOccurrenceSettlement" DisplayName="Event Occurrence (Settlement)" Description="Weighted chance (0-100) for captive events in settlements." SettingField="EventOccurrenceSettlement" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="EventOccurrenceLord" DisplayName="Event Occurrence (Lord)" Description="Weighted chance (0-100) for lord-specific captive events." SettingField="EventOccurrenceLord" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="EventOccurrenceCaptor" DisplayName="Event Occurrence (Captor)" Description="Weighted chance (0-100) for captor-related events." SettingField="EventOccurrenceCaptor" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="EventCaptorDialogue" DisplayName="Captor Dialogue" Description="Enable captor dialogue interactions." SettingField="EventCaptorDialogue" Type="Boolean" />
      <Option OptionId="EventCaptorNotifications" DisplayName="Captor Notifications" Description="Show notifications for captor events." SettingField="EventCaptorNotifications" Type="Boolean" />
      <Option OptionId="EventCaptorCustomTextureNotifications" DisplayName="Custom Texture Notifications" Description="Use custom textures in captor event notifications." SettingField="EventCaptorCustomTextureNotifications" Type="Boolean" />
    </OptionGroup>
  </DataSource>

  <!-- Escape Options: Prisoner escape mechanics and behaviors -->
  <DataSource Id="EscapeOptions">
    <OptionGroup GroupId="EscapeSettings">
      <Option OptionId="PrisonerEscapeBehavior" DisplayName="Prisoner Escape Enabled" Description="Allow prisoners to attempt escape." SettingField="PrisonerEscapeBehavior" Type="Boolean" />
      <Option OptionId="PrisonerHeroEscapeParty" DisplayName="Hero Escape (Party)" Description="Allow hero prisoners to escape from traveling parties." SettingField="PrisonerHeroEscapeParty" Type="Boolean" />
      <Option OptionId="PrisonerHeroEscapeSettlement" DisplayName="Hero Escape (Settlement)" Description="Allow hero prisoners to escape from settlements." SettingField="PrisonerHeroEscapeSettlement" Type="Boolean" />
      <Option OptionId="PrisonerHeroEscapeOther" DisplayName="Hero Escape (Other)" Description="Allow hero prisoners to escape from other locations." SettingField="PrisonerHeroEscapeOther" Type="Boolean" />
      <Option OptionId="PrisonerHeroEscapeChanceParty" DisplayName="Hero Escape Chance (Party)" Description="Percent chance (0-100) hero escapes from party." SettingField="PrisonerHeroEscapeChanceParty" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="PrisonerHeroEscapeChanceSettlement" DisplayName="Hero Escape Chance (Settlement)" Description="Percent chance (0-100) hero escapes from settlement." SettingField="PrisonerHeroEscapeChanceSettlement" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="PrisonerHeroEscapeChanceOther" DisplayName="Hero Escape Chance (Other)" Description="Percent chance (0-100) hero escapes from other locations." SettingField="PrisonerHeroEscapeChanceOther" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="PrisonerNonHeroEscapeParty" DisplayName="Non-Hero Escape (Party)" Description="Allow non-hero prisoners to escape from traveling parties." SettingField="PrisonerNonHeroEscapeParty" Type="Boolean" />
      <Option OptionId="PrisonerNonHeroEscapeSettlement" DisplayName="Non-Hero Escape (Settlement)" Description="Allow non-hero prisoners to escape from settlements." SettingField="PrisonerNonHeroEscapeSettlement" Type="Boolean" />
      <Option OptionId="PrisonerNonHeroEscapeOther" DisplayName="Non-Hero Escape (Other)" Description="Allow non-hero prisoners to escape from other locations." SettingField="PrisonerNonHeroEscapeOther" Type="Boolean" />
      <Option OptionId="PrisonerNonHeroEscapeChanceParty" DisplayName="Non-Hero Escape Chance (Party)" Description="Percent chance (0-100) non-hero escapes from party." SettingField="PrisonerNonHeroEscapeChanceParty" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="PrisonerNonHeroEscapeChanceSettlement" DisplayName="Non-Hero Escape Chance (Settlement)" Description="Percent chance (0-100) non-hero escapes from settlement." SettingField="PrisonerNonHeroEscapeChanceSettlement" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="PrisonerNonHeroEscapeChanceOther" DisplayName="Non-Hero Escape Chance (Other)" Description="Percent chance (0-100) non-hero escapes from other locations." SettingField="PrisonerNonHeroEscapeChanceOther" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="HuntLetPrisonersEscape" DisplayName="Hunt Allows Escape" Description="Prisoners can escape during hunts." SettingField="HuntLetPrisonersEscape" Type="Boolean" />
      <Option OptionId="HuntBegins" DisplayName="Hunt Start Day" Description="Days after capture before hunt begins." SettingField="HuntBegins" Type="Numeric" Min="1" Max="30" />
      <Option OptionId="AmountOfTroopsForHunt" DisplayName="Troops for Hunt" Description="Number of troops sent on hunt." SettingField="AmountOfTroopsForHunt" Type="Numeric" Min="5" Max="50" />
    </OptionGroup>
  </DataSource>

  <!-- Gear Options: Stolen gear and equipment mechanics -->
  <DataSource Id="GearOptions">
    <OptionGroup GroupId="GearSettings">
      <Option OptionId="StolenGear" DisplayName="Stolen Gear System" Description="Enable captives losing gear when captured." SettingField="StolenGear" Type="Boolean" />
      <Option OptionId="StolenGearQuest" DisplayName="Stolen Gear Quest" Description="Create quest to recover stolen gear." SettingField="StolenGearQuest" Type="Boolean" />
      <Option OptionId="StolenGearDuration" DisplayName="Gear Quest Duration (Days)" Description="Days before stolen gear quest expires." SettingField="StolenGearDuration" Type="Numeric" Min="1" Max="30" />
      <Option OptionId="StolenGearChance" DisplayName="Stolen Gear Chance (%)" Description="Percent chance (0-100) gear is stolen on capture." SettingField="StolenGearChance" Type="Numeric" Min="0" Max="100" Step="0.1" />
      <Option OptionId="BetterOutFitChance" DisplayName="Better Outfit Chance (%)" Description="Percent chance (0-100) captive gets better outfit." SettingField="BetterOutFitChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="WeaponChance" DisplayName="Weapon Chance (%)" Description="Percent chance (0-100) captive gains weapon." SettingField="WeaponChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="WeaponBetterChance" DisplayName="Better Weapon Chance (%)" Description="Percent chance (0-100) weapon is improved tier." SettingField="WeaponBetterChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="WeaponSkill" DisplayName="Weapon Skill Boost" Description="Captive gains weapon skill levels." SettingField="WeaponSkill" Type="Boolean" />
      <Option OptionId="RangedBetterChance" DisplayName="Ranged Weapon Chance (%)" Description="Percent chance (0-100) ranged weapon instead of melee." SettingField="RangedBetterChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="RangedSkill" DisplayName="Ranged Skill Boost" Description="Captive gains ranged skill levels." SettingField="RangedSkill" Type="Boolean" />
      <Option OptionId="HorseChance" DisplayName="Horse Chance (%)" Description="Percent chance (0-100) captive gains horse." SettingField="HorseChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="HorseSkill" DisplayName="Horse Skill Boost" Description="Captive gains horse riding skill levels." SettingField="HorseSkill" Type="Boolean" />
      <Option OptionId="EventCaptorGearCaptives" DisplayName="Captor Gear Captives" Description="Captives gain gear during captor events." SettingField="EventCaptorGearCaptives" Type="Boolean" />
      <Option OptionId="EventProstituteGear" DisplayName="Prostitute Gear" Description="Prostitutes gain special outfit gear." SettingField="EventProstituteGear" Type="Boolean" />
    </OptionGroup>
  </DataSource>

  <!-- Pregnancy Options: Pregnancy system settings -->
  <DataSource Id="PregnancyOptions">
    <OptionGroup GroupId="PregnancySettings">
      <Option OptionId="PregnancyToggle" DisplayName="Pregnancy System Enabled" Description="Enable pregnancy mechanic for female captives." SettingField="PregnancyToggle" Type="Boolean" />
      <Option OptionId="PregnancyChance" DisplayName="Pregnancy Chance (%)" Description="Percent chance (0-100) female becomes pregnant." SettingField="PregnancyChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="UsePregnancyModifiers" DisplayName="Pregnancy Modifiers" Description="Apply difficulty/age modifiers to pregnancy chance." SettingField="UsePregnancyModifiers" Type="Boolean" />
      <Option OptionId="PregnancyDurationInDays" DisplayName="Pregnancy Duration (Days)" Description="Number of days pregnancy lasts." SettingField="PregnancyDurationInDays" Type="Numeric" Min="1" Max="100" />
      <Option OptionId="PregnancyMessages" DisplayName="Pregnancy Messages" Description="Show pregnancy-related messages and notifications." SettingField="PregnancyMessages" Type="Boolean" />
      <Option OptionId="AttractivenessSkill" DisplayName="Attractiveness Skill" Description="Captive gains attractiveness skill levels." SettingField="AttractivenessSkill" Type="Boolean" />
    </OptionGroup>
  </DataSource>

  <!-- Tuning Options: Fine-tuning parameters and balancing -->
  <DataSource Id="TuningOptions">
    <OptionGroup GroupId="TuningSettings">
      <Option OptionId="EventRandomFireChance" DisplayName="Random Fire Chance (%)" Description="Percent chance (0-100) random event triggers." SettingField="EventRandomFireChance" Type="Numeric" Min="0" Max="100" />
      <Option OptionId="EventAmountOfImagesToPreload" DisplayName="Preload Images" Description="Number of images to preload into memory." SettingField="EventAmountOfImagesToPreload" Type="Numeric" Min="10" Max="200" />
      <Option OptionId="BrothelOption" DisplayName="Brothel Option (1-3)" Description="Brothel management mode: 1=Default, 2=Enhanced, 3=Full Control." SettingField="BrothelOption" Type="Numeric" Min="1" Max="3" />
      <Option OptionId="EscapeAutoRansom" DisplayName="Auto Ransom on Escape" Description="Automatically ransom escaped prisoners (0=off, gold amount=ransom price)." SettingField="EscapeAutoRansom" Type="Numeric" Min="0" Max="10000" />
      <Option OptionId="RenownMin" DisplayName="Renown Minimum" Description="Minimum renown required for certain events." SettingField="RenownMin" Type="Numeric" Min="0" Max="1000" />
      <Option OptionId="CustomBackgrounds" DisplayName="Custom Backgrounds" Description="Use custom backgrounds in events." SettingField="CustomBackgrounds" Type="Boolean" />
      <Option OptionId="LogToggle" DisplayName="Debug Logging" Description="Enable debug log output for troubleshooting." SettingField="LogToggle" Type="Boolean" />
      <Option OptionId="ProstitutionControl" DisplayName="Prostitution Events" Description="Enable prostitution-related events." SettingField="ProstitutionControl" Type="Boolean" />
      <Option OptionId="SlaveryToggle" DisplayName="Slavery Events" Description="Enable slavery-related events." SettingField="SlaveryToggle" Type="Boolean" />
      <Option OptionId="FemdomControl" DisplayName="Femdom Events" Description="Enable female domination events." SettingField="FemdomControl" Type="Boolean" />
      <Option OptionId="RomanceControl" DisplayName="Romance Events" Description="Enable romance-related events." SettingField="RomanceControl" Type="Boolean" />
    </OptionGroup>
  </DataSource>

</CESettingsDataSources>
