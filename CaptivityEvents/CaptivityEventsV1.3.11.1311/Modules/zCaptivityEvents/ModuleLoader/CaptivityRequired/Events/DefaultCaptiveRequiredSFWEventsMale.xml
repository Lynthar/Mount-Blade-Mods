    <!-- Attempt Escape Events -->
    <CEEvent>
        <Name>CE_captivity_escape_failure_male</Name>
        <Text>{=DefaultCaptiveRequiredSFWEventsMale11}{?ISONSEA}You're spotted as you attempt to escape, and the guards stop you on the deck of the ship, binding your wrists with ropes to prevent any further resistance. They decide to take your punishment into their own hands, punching and kicking you while you're down.{?}You're spotted as you attempt to escape, and a group of your captors shove you to the ground, binding your wrists with ropes to prevent any further resistance. They decide to take your punishment into their own hands, punching and kicking you while you're down.{/?}</Text>
        <Backgrounds>
            <Background Name="encounter_escape_fail_sfw_naval" Weight="1" UseConditions="CE_background_sea" />
            <Background Name="encounter_escape_fail_sfw" Weight="1" />
        </Backgrounds>
        <MultipleRestrictedListOfFlags>
            <RestrictedListOfFlags>Captive</RestrictedListOfFlags>
            <RestrictedListOfFlags>Overwritable</RestrictedListOfFlags>
            <RestrictedListOfFlags>CanOnlyBeTriggeredByOtherEvent</RestrictedListOfFlags>
        </MultipleRestrictedListOfFlags>
        <Options>
