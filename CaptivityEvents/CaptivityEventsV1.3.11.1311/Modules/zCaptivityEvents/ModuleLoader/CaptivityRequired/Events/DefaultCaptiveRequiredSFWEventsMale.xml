    <CEEvent>
        <Name>CE_menu_captivity_castle_taken_prisoner_male</Name>
        <Text>{=DefaultCaptiveRequiredSFWEventsMale5}Your attempt to infiltrate the castle fails
            spectacularly, and you are quickly surrounded by guards. They take your weapons,
            dragging you to the dungeons where they throw you into a cell, commenting that their
            leader will be by shortly to interrogate you.</Text>
        <BackgroundName>encounter_guards</BackgroundName>
        <MultipleRestrictedListOfFlags>
            <RestrictedListOfFlags>Random</RestrictedListOfFlags>
            <RestrictedListOfFlags>Overwritable</RestrictedListOfFlags>
            <RestrictedListOfFlags>CanOnlyBeTriggeredByOtherEvent</RestrictedListOfFlags>
        </MultipleRestrictedListOfFlags>
        <Options>
            <Option>
                <Order>0</Order>
                <MultipleRestrictedListOfConsequences>
                    <RestrictedListOfConsequences>SoldToSettlement</RestrictedListOfConsequences>
                    <RestrictedListOfConsequences>Continue</RestrictedListOfConsequences>
                </MultipleRestrictedListOfConsequences>
                <OptionText>{=DefaultCaptiveRequiredSFWEventsMale6}Or more likely gloat...</OptionText>
                <TriggerEvents>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_settlement_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                    <TriggerEvent>
                        <EventName>CE_advanced_capture_village_male</EventName>
                        <EventWeight>1</EventWeight>
                        <EventUseConditions>True</EventUseConditions>
                    </TriggerEvent>
                </TriggerEvents>
            </Option>
        </Options>


        <ReqHeroMinAge>18</ReqHeroMinAge>
    </CEEvent>

